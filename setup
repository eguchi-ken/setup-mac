#!/bin/bash

mkdir -p ~/work
cd ~/work

echo 'git をインストールします'
brew install git


git clone git@github.com:eguchi-ken/setup-mac 2>/dev/null
cd ~/work/setup-mac
git pull origin master

echo '各パッケージ/アプリケーションをインストールします'
brew bundle -v

echo '~/.bash_profile を置き換えます'
cat ~/work/setup-mac/bash_profile.sh  > ~/.bash_profile

cd ~/work


echo 'emacs を設定します'
git clone git@github.com:eguchi-ken/dotemacs2.git 2>/dev/null
cd ~/work/dotemacs2/
git pull origin master
mkdir -p ~/.emacs.d/
ln -s init.el ~/.emacs.d/init.el

cd ~/work

echo 'rbenv を使って ruby2.5.5 をインストールします'
rbenv install 2.5.5
rbenv versions
